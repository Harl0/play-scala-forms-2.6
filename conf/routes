# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.WidgetController.index

# Widgets
GET     /widgets                    controllers.WidgetController.addWidget
POST    /widgets                    controllers.WidgetController.createWidget

# Client access
GET     /retrieve                   controllers.WidgetController.retrieveAllClients
GET     /retrievePage               controllers.WidgetController.retrieveAllClientsPage


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
